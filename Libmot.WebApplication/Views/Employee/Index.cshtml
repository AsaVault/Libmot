@model IEnumerable<Data.Domain.Entities.Employee>

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.Create != null && ViewBag.Create != false)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Hello!</strong> New employee was created successfully.
    </div>
}

@if (ViewBag.Update != null && ViewBag.Update != false)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Hello!</strong> Employee was updated successfully.
    </div>
}


@if (ViewBag.Delete != null && ViewBag.Delete != false)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Hello!</strong> Employee was deleted successfully.
    </div>
}
<div class="row col-md-12">
    <div class="alert alert-secondary alert-dismissible fade show text-center">
        <strong>List of Employees </strong>
    </div>
    <table class="table table-hover table-bordered">
        <thead class="bg-primary text-light">
            <tr>
                <th>
                    S/N
                </th>
                <th>
                    Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Address
                </th>
                <th>
                    Email
                </th>
                @*<th><a asp-action="Create" class="text-light">Create New</a></th>*@
                <th><a asp-area="Identity" asp-page="/Account/Register" class="text-light">Create New</a></th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>