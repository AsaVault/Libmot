@model LibmotInventory.Models.StockCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Stock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" class="form-control" hidden />

            <div class="form-group row">
                <div class="col-md-4 text-md-right">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 text-md-right">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 text-md-right">
                    <label asp-for="Manufacturer" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Manufacturer" class="form-control" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 text-md-right">
                    <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                
                <div class="col-md-12">
                    <select asp-for="WarehouseId" asp-items="Model.warehouseList" class="form-control">
                        <option value="">Select Warehouse</option>
                    </select>
                    <span asp-validation-for="WarehouseId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6 text-md-right">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="col-md-6 text-md-left">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
